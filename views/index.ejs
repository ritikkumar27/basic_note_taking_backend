<html>
    <head>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>


    </head>

    <body>
        <!-- <h1>index page rendered by ejs <%= 2+2 %></h1> -->
        <div class = "main w-full min-h-screen bg-white">
            <div class="form px-10 py-5">
                <form action="/create" method="post">
                    <input class="block rounded-md outline-none w-full px-5 py-8 bg-zinc-300" type="text" placeholder="Title goes here" name="title">
                    <textarea class="block rounded-md outline-none w-full px-5 py-8 mt-2 resize-none bg-zinc-300" placeholder="write task details here..." name="details"></textarea>
                    <input class="mt-2 px-5 py-2 rounded-md bg-blue-200" type="submit" value="create task">
                </form>

            </div>

            <div class="tasks p-10 flex gap-5 flex-wrap">

                <% if(files.length > 0) { %>

                    <% files.forEach(function(val) { %>
                        <!-- Do something with each val here -->
                         <div class="task w-72  px-3 py-4 rounded-md bg-zinc-300">
                            <h1 class="text-2xl tracking-tighter"><%= val  %></h1>
                            <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">Read More</a>
                        </div>

                    <% }); %>

                <% } else { %>

                    <h3 class="px-5 mt-2 text-zinc-600">No Tasks Yet!</h3>

                <% } %>



                

                

                

            </div>
        </div>

    </body>
</html>